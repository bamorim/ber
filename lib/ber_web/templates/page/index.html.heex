<div class="container mx-auto max-w-xl">
  <h1 class="text-4xl text-center m-10">Bernardo Amorim</h1>
  <img
    src="https://github.com/bamorim.png"
    class="w-64 rounded-full border-2 border-gray-400 mx-auto my-10"
  />
  <ul>
    <%= for %{name: name, url: url} <- @links do %>
      <%= link(to: url) do %>
        <li class="bg-white rounded-md p-2 border-2 border-gray-400 m-2 hover:bg-gray-100">
          <%= name %>
        </li>
      <% end %>
    <% end %>
  </ul>
</div>
